    }
    elseif($this->qtd >=21 and $this->qtd<=50){
$this->desct= "20%";
$desct=($this->pagament*20)/100;
$this->pagament = $this->pagament - $desct;
    }
    elseif($this->qtd >50){
$this->desct= "25%";
$desct=($this->pagament*25)/100;
$this->pagament = $this->pagament - $desct;
    }
    else{
$this->desct = 0;
    }
}
}
