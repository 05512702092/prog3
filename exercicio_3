<?php
class produto{
  public $nome;
  public $pc;
  public $qtd;
  public $desct;
  public $pagament;
public function produto($n,$pc,$qtd){
$this->nome = $n;
$this->pc = $pc;
$this->qtd = $qtd;
$this->pagament = $this->pc * $this->qtd;
    if($this->qtd >=11 and $this->qtd <=20){
$this->desct= "10%";
$desct=($this->pagament*10)/100;
